package first;
import java.awt.*;
import java.util.*;

public class Game {
	public static int[] pixels;
	
	public Game() {
		pixels = new int[(int) Component.pixel.getWidth() * (int) Component.pixel.getHeight()];
		
		for(int x = 0; x < Component.pixel.getWidth(); x ++) {
			for(int y = 0; y < (int) Component.pixel.getHeight(); y ++) {
				pixels[(y *  (int) Component.pixel.getHeight() + x]; = new Random().nextInt();			}
		}
	}
	
	public void tick() {
		
	}
	
	public void render(Graphics g) {
		
	}
}
